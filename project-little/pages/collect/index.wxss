.collect_main{
  background-color: #f3f4f6;
}
.goods_info_wrap{
  flex:3;
  display:flex;
  flex-direction: column;
  /*更改主轴方向*/
  justify-content: space-around;
}
.goods_name{
  display:-webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  /*第几行出现字符串缩写，那么就写几*/
}
.goods_price{
  color:#f90;
  font-size:32rpx;
}
.goods_item{
  background-color: #fff;
  display:flex;
  border-bottom: 2rpx solid #ccc;
  padding:15rpx;
}
.goods_img_wrap{
  flex:2;
  display:flex;
  justify-content: center;
  align-content: center;
 
}